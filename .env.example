# Copy to .env and fill in real values. Never commit .env.

# Required: MongoDB connection string (local or Atlas)
MONGO_URI=mongodb://localhost:27017/interplayerdex

# Optional
PORT=3001
NODE_ENV=development

# Optional: CORS – allow this origin in addition to localhost (e.g. production frontend)
# FRONTEND_URL=https://your-frontend.example.com

# Optional: HTTPS – paths to key and cert (default: certs/key.pem, certs/cert.pem)
# Generate with: npm run certs
# SSL_KEY_PATH=certs/key.pem
# SSL_CERT_PATH=certs/cert.pem
